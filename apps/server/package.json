{
  "name": "@webbun/server",
  "version": "1.0.50",
  "main": "dist/js/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --target bun --outdir ./dist/js && tsc",
    "start": "NODE_ENV=production bun dist/js/index.js",
    "clean": "rm -rf .turbo dist node_modules",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "deploy": "bun run build && cd ../.. && fly deploy --config=apps/server/fly.toml --dockerfile=apps/server/.dockerfile"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/swagger": "^1.1.6",
    "elysia": "latest"
  },
  "prettier": "@webbun/prettier-config",
  "devDependencies": {
    "@webbun/typescript-config": "*",
    "@webbun/prettier-config": "*",
    "@types/bun": "latest",
    "typescript": "5.5.4"
  },
  "type": "module",
  "module": "src/index.js"
}
