{
  "extends": "@webbun/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "emitDeclarationOnly": false,
    "strict": true
  },
  "include": [
    "globals.d.ts",
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.mjs",
    "postcss.config.mjs"
  ],
  "exclude": ["node_modules"]
}
